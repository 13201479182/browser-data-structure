{
    "npm.packageManager": "pnpm",
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[vue]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[markdown]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.quickSuggestions": {
            "other": true,
            "comments": true,
            "strings": true,
        },
    },
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit"
    },
    "files.exclude": {
        ".vscode/extensions.json": true,
        ".vscode/install.vsix.js": true,
        ".vscode/vue.json": true,
        "**/node_modules": false,
        "**/.gitignore": true,
        "**/.editorconfig": true,
        "**/.prettierrc.cjs": true,
        "**/.prettierignore": true,
        "**/.markdownlint.jsonc": true,
        "**/.npmrc": true,
        "**/eslint.config.cjs": true,
        "**/pnpm-lock.yaml": true,
        "**/.cache": true
    },
    "typescript.tsdk": "node_modules\\typescript\\lib"
}